<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd">
	<t:content>
		<div class="col-xs-12 col-sm-6 col-lg-4">
			<div class="row">
				<div class="col-xs-12">
					<p>
						<strong>
							${article.heading}
						</strong>
					</p>
				</div>
				<div class="col-xs-12">
					<img src="${article.image}" class="asdf"></img>
				</div>
				<div class="col-xs-12">
					<p>
						<span>${article.author}</span>
					</p>
				</div>
			</div>
		</div>
	</t:content>
</html>
