<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd">
	<t:content>
		<div class="col-xs-12 col-sm-6 col-lg-4">
			<div class="row">
				<div class="col-xs-12">
					<p>
						<strong>
							${article.heading}
						</strong>
					</p>
				</div>
				<div class="col-xs-12">
					<t:pagelink page="Article" context="article.uuid">
						<img src="${article.image}" />
					</t:pagelink>
				</div>
				<div class="col-xs-12">
					<p>
						<span>${article.author}</span>
					</p>
					<p>
						<span>${article.uuid}</span>
					</p>
				</div>
			</div>
		</div>
	</t:content>
</html>
