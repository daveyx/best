<html t:type="layout" title=""
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd">
	<div class="row">
		<div class="col-xs-12 text-center">
			${article.heading}
		</div>
		<div class="col-xs-12 col-sm-10 col-sm-offset-1 col-lg-offset-2 col-lg-8 text-center">
			<t:if test="${article.videoId}">
				<div class="video-responsive">
					<iframe src="https://player.vimeo.com/video/${article.videoId}"
						width="640" height="360" frameborder="0" webkitallowfullscreen=""
						mozallowfullscreen="" allowfullscreen=""></iframe>
				</div>
			</t:if>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12 text-center">
			<img src="${article.image}" />
		</div>
		<div class="col-xs-12 text-center">
			<hr />
			${article.author}
		</div>
		<div class="col-xs-12 text-center">
			<hr />
			${article.intro}
		</div>
	</div>
</html>
